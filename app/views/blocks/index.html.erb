<p id="notice"><%= notice %></p>

<h1>Recent Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Height</th>
      <th>Hash</th>
      <th>Time</th>
      <th>TX</th>
      <th>Size</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <% if block.orphane? %>
          <td><%= link_to "[ ORPHANE! ]", block %></td>
          <td><%= link_to block.blhash, block  %></td>
          <td><%= Time.at(block.bldata["time"]) %></td>
          <td><%= block.bldata["tx"].count %></td>
          <td><%= block.bldata["size"] %></td>
          <td><%= 0 %> BTC </td>
        <% else %>
          <td><%= link_to block.showbl.bip34_block_height, block %></td>
          <td><%= link_to block.blhash, block  %></td>
          <td><%= Time.at(block.showbl.time) %></td>
          <td><%= block.showbl.tx.count %></td>
          <td><%= block.bldata["size"] %></td>
          <td><%= block.total_value.to_f/100000000 %> BTC </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
